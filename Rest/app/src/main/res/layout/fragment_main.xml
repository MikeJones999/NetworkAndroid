<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/background"
    tools:context=".MainActivity$PlaceholderFragment"
    style="@style/AppTheme">

    <TextView
        android:id="@+id/Welcome"
        android:text="@string/Welcome"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="#fff5fffb" />

    <TextView
        android:id="@+id/access_value"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/Welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />


    <EditText
        android:id="@+id/userName"
        android:layout_height="wrap_content"
        android:hint="@string/userNameHint"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password"
        android:layout_height="wrap_content"
        android:hint="@string/passwordHint"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_above="@+id/ipaddress"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/ipaddress"
        android:layout_height="wrap_content"
        android:hint="@string/ipaddress"
        android:inputType="textUri"
        android:layout_width="wrap_content"
        android:layout_above="@+id/portaddress"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/portaddress"
        android:layout_height="wrap_content"
        android:hint="@string/portaddress"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"
        android:textColor="#ff000000" />


    <Button
    android:id="@+id/ButtonSendUserDetails"
    android:layout_height="wrap_content"
    android:text="@string/ButtonSendUserDetails"
    android:onClick="sendUserDetails"
    android:layout_width="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/ipaddress"
        android:layout_centerHorizontal="true">
</Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Login in below"
        android:id="@+id/textView"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/userName"
        android:layout_centerHorizontal="true"
        android:textColor="#fffcfdff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/birkbeckicon"
        android:scaleType = "centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>